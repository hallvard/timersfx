<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>no.hal.timers</groupId>
		<artifactId>parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>fxui.ios</artifactId>

	<properties>
        <gluon.client.plugin.version>0.1.14</gluon.client.plugin.version>
        <mainClassName>no.hal.timers.fxui.ios.IosApp</mainClassName>
	</properties>

	<dependencies>
		<dependency>
			<groupId>no.hal.timers</groupId>
			<artifactId>fxui</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
                <groupId>com.gluonhq</groupId>
                <artifactId>client-maven-plugin</artifactId>
                <version>${gluon.client.plugin.version}</version>
                <configuration>
                    <target>ios</target>
                    <bundlesList>
                        <list>no.hal.timers.fxui.App</list>
                    </bundlesList>
                    <reflectionList>
                        <list>javafx.fxml.FXMLLoader</list>
                        <list>no.hal.timers.fxui.AppController</list>
                        <list>javafx.scene.control.Label</list>
                        <list>javafx.scene.control.Button</list>
                        <list>javafx.scene.control.ToggleButton</list>
                        <list>javafx.scene.control.CheckBox</list>
                        <list>javafx.scene.control.TextField</list>
                        <list>javafx.scene.layout.BorderPane</list>
                        <list>javafx.scene.layout.HBox</list>
                        <list>javafx.scene.layout.GridPane</list>
                        <list>javafx.scene.image.ImageView</list>
                        <list>javafx.scene.image.Image</list>
                    </reflectionList>
                    <mainClass>${mainClassName}</mainClass>
                </configuration>
            </plugin>
		</plugins>
	</build>
</project>
